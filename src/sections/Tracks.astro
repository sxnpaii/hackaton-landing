  {
    label: "Fintech",
    title: "Управление накоплениями",
    image: "./cash.png",
    description: `Решение для клиентов Payme, которое позволит
покупать акции компаний прямо в мобильном приложении.`,
    color: "#dfe8e5",
    light: true,
  },
  {
    label: "Foodtech",
    title: "Оптимизация доставки",
    image: "./Card_new.png",
    description: `Start spending worldwide with your brand new digital or physical Mastercard debit card.`,
    color: "#bec7e7",
    light: true,
  },
];
---

<section class="Tracks">
  <h6>Треки <img src="./south_east_FILL0.svg" alt="" /></h6>
  <div class="Frame">
    <div class="LeftSide">
      {
        localData
          .map((el) => (
            <Track
              image={el.image}
              title={el.title}
              label={el.label}
              description={el.description}
              color={el.color}
              light={el.light}
              className="full"
            />
          ))
          .slice(0, 2)
      }
    </div>
    <div class="RightSide">
      {
        localData
          .map((el) => (
            <Track
              image={el.image}
              title={el.title}
              label={el.label}
              description={el.description}
              color={el.color}
              light={el.light}
              className="full"
            />
          ))
          .slice(2, 4)
      }
    </div>
  </div>
    {
      localData
        .filter((el) => el.image === null)
        .map((el) => (
          <Track
            title={el.title}
            description={el.description}
            label={el.label}
            color={el.color}
            light={el.light}
            className="full" 
          />
        ))
    }
    <div class="Bottom">
      {
        localData
          .map((el) => (
            <Track
              image={el.image}
              title={el.title}
              label={el.label}
              description={el.description}
              color={el.color}
              light={el.light}
            />
          ))
          .slice(5)
      }
    </div>
</section>

<style lang="scss">
  section.Tracks {
    @apply xl:w-[81%] mx-auto w-full;
    h6 {
      @apply mb-10;
      img {
        @apply inline-block w-[20px];
      }
    }
    .Frame {
      @apply flex items-end justify-center sm:justify-between max-sm:flex-wrap ;
      .RightSide, .LeftSide {
        @apply w-full
      }
    }
    .Bottom{
      @apply flex items-start justify-center max-sm:flex-wrap;
      .Tracks{
        @apply w-full;
      }
    }
  }
</style>
