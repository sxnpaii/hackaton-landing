---
import Track from "../components/Track.astro";
import { TracksSectData } from "../utils/localdata";
import "../styles/pages-styles/indexPage/sections/Tracks.scss"
---

<section class="Tracks">
  <h6>Треки <img src="./south_east_FILL0.svg" alt="" /></h6>
  <div class="Frame">
    <div class="LeftSide"
    data-aos="fade-up"
    >
      {
        TracksSectData.map((el) => (
          <Track
            image={el.image}
            title={el.title}
            label={el.label}
            description={el.description}
            color={el.color}
            light={el.light}
            className="full"
            route={el.route}
            pos="left"

          />
        )).slice(0, 2)
      }
    </div>
    <div class="RightSide">
      {
        TracksSectData.map((el) => (
          <Track
            image={el.image}
            title={el.title}
            label={el.label}
            description={el.description}
            color={el.color}
            light={el.light}
            className="full"
            route={el.route}
            pos="right"
          />
        )).slice(2, 4)
      }
    </div>
  </div>
  {
    TracksSectData.filter((el) => el.image === null).map((el) => (
      <Track
        title={el.title}
        description={el.description}
        label={el.label}
        color={el.color}
        light={el.light}
        className="full"
        pos="up"
      />
    ))
  }
  <div class="Bottom">
    {
      TracksSectData.map((el) => (
        <Track
          image={el.image}
          title={el.title}
          label={el.label}
          description={el.description}
          color={el.color}
          light={el.light}
          route={el.route}
          pos="up"
        />
      )).slice(5)
    }
  </div>
</section>

